@model WebApplication.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
<div class="login">
    <div class="frmLogin">
        <div class="title">Quản trị website InSysVina</div>
        <div class="hr"><span>Đăng nhập hệ thống</span></div>
        <div class="error" style="color:red">
            @Html.ValidationSummary()
        </div>
        <div class="body">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "frmLogin" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName)
                    <fieldset>
                        <i class="fas fa-user"></i>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required" })
                    </fieldset>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    <fieldset>
                        <i class="fas fa-key"></i>
                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @required = "required", @minlength = 6 })
                    </fieldset>
                </div>
                <button type="submit" class="btn"><i class="fas fa-sign-in-alt"></i> Đăng Nhập</button>
            }
        </div>
    </div>
</div>
<div class="modal fade" id="mdlResetPass" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Lấy lại mật khẩu</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="frmResetPassword">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tài Khoản:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="email" placeholder="UserName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="pwd" placeholder="Email">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btnResetPassword" class="btn btn-success">Gửi lại mật khẩu</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/controller/Account.js"></script>
}

