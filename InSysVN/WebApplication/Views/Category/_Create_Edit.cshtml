@using LIB
@model LIB.CategoryEntity
@{
    var dataCategory = ViewBag.Categories as List<CategoryEntity>;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">@(Model.Id == null ? "TẠO DANH MỤC" : "CẬP NHẬT DANH MỤC")</h4>
</div>
@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form form-horizontal", @id = "frmCategory" }))
{
    <div class="modal-body">
        @Html.TextBoxFor(t => t.Id, new { @style = "display:none" })
        <div class="form-group">
            @Html.LabelFor(t => t.Name)
            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @required = "" })
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.Code)
            @Html.TextBoxFor(t => t.Code, new { @class = "form-control", @required = "" })
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.ParentId)
            <select id="drdParentCategory" name="ParentId" class="form-control">
                <option></option>
                @foreach (var item in dataCategory)
                {
                    <option value="@item.Id" @((Model.Id != null && Model.ParentId == item.Id) ? "selected" : "")>@item.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-success" id="btnSubmit">@(Model.Id == null ? "Tạo mới" : "Cập nhật")</button>
    </div>
}
