@model WebApplication.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-textdirection="ltr" class="loading">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="Viện chiến lược và phát triển giao thông vận tải - Cơ sở dữ liệu an toàn giao thông">
    <meta name="keywords" content="Viện chiến lược và phát triển giao thông vận tải - Cơ sở dữ liệu an toàn giao thông">
    <meta name="author" content="PIXINVENT">
    <title>Đăng nhập hệ thống - Cơ sở dữ liệu an toàn giao thông</title>
    <link rel="apple-touch-icon" href="/App_Assets/images/ico/apple-icon-120.png">
    <link rel="shortcut icon" type="image/x-icon" href="/App_Assets/images/ico/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i%7COpen+Sans:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="/App_Assets/css/pages/login-register.css">
</head>
<body data-open="click" data-menu="vertical-menu" data-col="1-column" class="vertical-layout vertical-menu 1-column bg-cyan bg-lighten-2 fixed-navbar">
    <!-- - var navbarShadow = true-->
    <!-- navbar-fixed-top-->
    <nav class="header-navbar navbar navbar-with-menu navbar-fixed-top navbar-dark">
        <div class="navbar-wrapper">
            <div class="navbar-header">
                <ul class="nav navbar-nav">
                    <li class="nav-item mobile-menu hidden-md-up float-xs-left"><a href="#" class="nav-link nav-menu-main menu-toggle hidden-xs"><i class="ft-menu font-large-1"></i></a></li>
                    <li class="nav-item">
                        <a href="#" class="navbar-brand">
                            <h2 class="brand-text">TDSI.GOV.VN</h2>
                        </a>
                    </li>
                    <li class="nav-item hidden-md-up float-xs-right"><a data-toggle="collapse" data-target="#navbar-mobile" class="nav-link open-navbar-container"><i class="fa fa-ellipsis-v"></i></a></li>
                </ul>
            </div>
            <div class="navbar-container">
                <div id="navbar-mobile" class="collapse navbar-toggleable-sm">
                    <ul class="nav navbar-nav float-xs-right">
                        <li class="nav-item"><a href="index.html" class="nav-link mr-2 nav-link-label"><i class="ficon ft-arrow-left"></i></a></li>
                        <li class="dropdown nav-item"><a href="#" data-toggle="dropdown" class="nav-link mr-2 nav-link-label"><i class="ficon ft-cog"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <div class="app-content content container-fluid">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="col-md-12 col-xs-12 box-shadow-2 p-0">
                    @if (!Utilities.checkMobile())
                    {
                        <div class="col-md-6 col-xs-6">
                            <img src="/App_Assets/images/Chien-luoc-GTVTVN.jpg" style="max-width:100%" alt="branding logo">
                        </div>
                    }
                    <div class="col-md-6 col-xs-12">
                        <div class="card border-grey border-lighten-3 px-2 py-2 row mb-0">
                            @if (!Utilities.checkMobile())
                            {
                                <div class="card-header no-border">

                                    <div class="row card-title text-xs-center">
                                        <div class="col-md-2">
                                            <img src="/App_Assets/images/logo.jpg" alt="branding logo">
                                        </div>
                                        <div class="col-md-10 text-l">
                                            <h3 style="font-weight:bold;">
                                                VIỆN CHIẾN LƯỢC VÀ PHÁT TRIỂN GIAO THÔNG VẬN TẢI
                                                TRANSPORT DEVELOPMENT & STATEGY INSTITUTE
                                            </h3>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <img src="/App_Assets/images/logo ISO 9001 - quacert.jpg" alt="iso logo">
                                                </div>
                                                <div class="col-md-9">
                                                    <p class="font-small-3">Địa chỉ: 162 Trần Quang Khải, Hoàn Kiếm, Hà Nội</p>
                                                    <p class="font-small-3">Điện thoại: (84-4) 39 348 823; Fax: (84-4) 38 256 408</p>
                                                    <p class="font-small-3">Email: vanthu.tdsi@mt.gov.vn; Website:www.tdsi.gov.vn</p>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <h2 class="card-subtitle line-on-side text-muted text-xs-center pt-2"><span>CƠ SỞ DỮ LIỆU AN TOÀN GIAO THÔNG</span></h2>
                                </div>
                            }
                            else
                            {
                                <div class="card-header no-border">
                                    <h3 class="card-subtitle line-on-side text-muted text-xs-center pt-2"><span>CƠ SỞ DỮ LIỆU AN TOÀN GIAO THÔNG</span></h3>
                                </div>
                            }
                        </div>
                        <div class="card border-grey border-lighten-3 px-2 py-2 row mb-0">
                            <div class="card-body collapse in">
                                <div class="card-block">
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "frmLogin", novalidate = "" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <label class="label label-control font-weight-bold">Tài khoản đăng nhập</label>
                                        @Html.ValidationSummary("", new { @class = "text-danger", @style = "text-align: left;" })
                                        <fieldset class="form-group position-relative has-icon-left">

                                            <input type="text" class="form-control input-lg" id="UserName" name="UserName" placeholder="Tài khoản đăng nhập" tabindex="1" required data-validation-required-message="Vui lòng nhập tên đăng nhập.">
                                            <div class="form-control-position">
                                                <i class="ft-user"></i>
                                            </div>
                                            <div class="help-block font-small-3"></div>
                                        </fieldset>
                                            <label class="label label-control font-weight-bold">Mật khẩu</label>
                                            <fieldset class="form-group position-relative has-icon-left">

                                                <input type="password" class="form-control input-lg" id="Password" name="Password" placeholder="Mật khẩu" tabindex="2" required data-validation-required-message="vui lòng nhập mật khẩu.">
                                                <div class="form-control-position">
                                                    <i class="fa fa-key"></i>
                                                </div>
                                                <div class="help-block font-small-3"></div>
                                            </fieldset>
                                            <fieldset class="form-group row">
                                                <div class="col-md-6 col-xs-12 text-xs-center text-md-left">
                                                    <fieldset>
                                                        <input type="checkbox" id="remember-me" class="chk-remember">
                                                        <label for="remember-me"> Ghi nhớ lần đăng nhập sau</label>
                                                    </fieldset>
                                                </div>
                                                <div class="col-md-6 col-xs-12 text-xs-center text-md-right"><a href="recover-password.html" class="card-link">Lấy lại mật khẩu?</a></div>
                                            </fieldset>
                                            <button type="submit" class="btn btn-danger btn-block btn-lg"><i class="ft-unlock"></i> Đăng nhập</button>
                                    }
                                </div>
                            </div>
                            @*<div class="card-footer no-border">
                                    <p class="card-subtitle line-on-side text-muted text-xs-center font-small-3 mx-2 my-1"><span>New to Stack ?</span></p>
                                    <a href="register-advanced.html" class="btn btn-primary btn-block btn-lg mt-3"><i class="ft-user"></i> Register</a>
                                </div>*@
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- ////////////////////////////////////////////////////////////////////////////-->

    <footer class="footer navbar-fixed-bottom footer-dark navbar-border">
        <p class="clearfix blue-grey lighten-2 text-sm-center mb-0 px-2"><span class="float-md-left d-xs-block d-md-inline-block">Copyright  &copy; 2017 <a href="http://tdsi.gov.vn/" target="_blank" class="text-bold-800 grey darken-2">Viện chiến lược và phát triển giao thông vận tải </a>, All rights reserved. </span><span class="float-md-right d-xs-block d-md-inline-block">Design by <a href="http://phucthanhgroup.com/Solutions" target="_blank">Phucthanhgroup</a>  <i class="ft-heart pink"></i></span></p>
    </footer>
    @Scripts.Render("~/Script/js")
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="/App_Assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
</body>
</html>
